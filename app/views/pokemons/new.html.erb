<h1>New Pokemon</h1>

<% if @pokemon.errors.any? %>
  <div id="error_explanation">
  <h2><%= "#{pluralize(@pokemon.errors.count, "error")}" %> prohibited pokemon must have a name and primary type and move1 to be filled in:</h2>
  <ul>
    <% @pokemon.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  <% end %>

<%= form_for(@pokemon) do |f| %>
  <%= f.label(:species) %>
  <%= f.text_field(:species) %>
  <br/>
  <%= f.label(:primary_type) %>
  <%= f.text_field(:primary_type) %>
  <br/>
  <%= f.label(:secondary_type) %>
  <%= f.text_field(:secondary_type) %>
  <br/>
  <%= f.label(:move1) %>
  <%= f.text_field(:move1) %>
  <br/>
  <%= f.label(:move2) %>
  <%= f.text_field(:move2) %>
  <br/>
  <%= f.label(:move3) %>
  <%= f.text_field(:move3) %>
  <br/>
  <%= f.label(:move4) %>
  <%= f.text_field(:move4) %>
  <br/>
  <%= f.submit %>
<% end %>
